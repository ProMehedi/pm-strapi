{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "price": {
      "type": "decimal"
    },
    "sale_price": {
      "type": "decimal"
    },
    "total_sales": {
      "type": "integer"
    },
    "rating_count": {
      "type": "integer"
    },
    "sku": {
      "type": "string"
    },
    "gallery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "on_sale": {
      "type": "boolean",
      "default": false
    },
    "stock_quantity": {
      "type": "integer"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "via": "products",
      "collection": "category",
      "dominant": true
    }
  }
}
